<!-- <div class="mdl-grid"> We will create this div in code -->
<div class="mdl-cell mdl-cell--11-col-desktop">
  <!-- Template for the Login Card -->
  <div class="pt_loginCard mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">Lets the game begin!</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <!-- Textfield with Floating Label -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" pattern="^[a-z\d\.]{4,20}$" id="pt_loginCard-loginId">
        <label class="mdl-textfield__label" for="pt_loginCard-loginId">Login ID</label>
        <span class="mdl-textfield__error">Login ID required. Minimum 4, max 20 characters</span>
      </div>
      <!-- Textfield with Floating Label -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="password" pattern="^.{1,50}$" id="pt_loginCard-loginPassword">
        <label class="mdl-textfield__label" for="pt_loginCard-loginPassword">Password</label>
        <span class="mdl-textfield__error">Password cannot be empty !</span>
      </div>
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="pt_loginCard-revealPassword">
        <input type="checkbox" id="pt_loginCard-revealPassword" class="mdl-checkbox__input">
        <span class="mdl-checkbox__label">Show Password</span>
      </label>
      <div>
        <p id="pt_loginCard-errorMessage"><p>
      </div>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <!-- Accent-colored raised button with ripple -->
      <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent pt_loginAction">
        Let's Go
      </button>
    </div>
  </div>
</div>
