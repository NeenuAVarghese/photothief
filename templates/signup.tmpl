<!-- <div class="mdl-grid"> We will create this div in code -->
<div class="mdl-cell mdl-cell--11-col-desktop">
  <!-- Template for the Login Card -->
  <div class="pt_signupCard mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-card--expand">
      <h2 class="mdl-card__title-text">I want to join</h2>
    </div>
    <div class="mdl-card__supporting-text">
      <!-- Textfield with Floating Label -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" pattern="^[a-zA-Z ]{2,30}$"id="pt_signupCard-name">
        <label class="mdl-textfield__label" for="pt_signupCard-name">Name</label>
        <span class="mdl-textfield__error">Name Required. Minimum 2, max 30 characters</span>
      </div>
      <!-- Textfield with Floating Label -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="email" pattern="^.{3,50}$"id="pt_signupCard-email">
        <label class="mdl-textfield__label" for="pt_signupCard-email">Email</label>
        <span class="mdl-textfield__error">Email required. Minimum 3, max 50 characters</span>
      </div>
      <!-- Textfield with Floating Label -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" pattern="^[a-z\d\.]{4,20}$" id="pt_signupCard-loginId">
        <label class="mdl-textfield__label" for="pt_signupCard-loginId">Login Id</label>
        <span class="mdl-textfield__error">Login ID required. Minimum 4, max 20 characters</span>
      </div>
      <!-- Textfield with Floating Label -->
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <input class="mdl-textfield__input" type="text" pattern="[a-zA-Z0-9]{5,9}" id="pt_signupCard-password">
        <label class="mdl-textfield__label" for="pt_signupCard-password">Password</label>
        <span class="mdl-textfield__error">Password required.  Minimum 5, max 9 characters</span>
      </div>
      <label class="mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" for="pt_signupCard-hidePassword">
        <input type="checkbox" id="pt_signupCard-hidePassword" class="mdl-checkbox__input">
        <span class="mdl-checkbox__label">Hide Password</span>
      </label>
      <div>
        <p id="pt_signupCard-errorMessage"><p>
      </div>

    </div>
    <div class="mdl-card__actions mdl-card--border">
      <!-- Accent-colored raised button with ripple -->
      <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent pt_signupAction">
        Sign Me Up
      </button>
    </div>
  </div>
</div>
